{
  "name": "node-purified-image",
  "version": "0.1.0",
  "description": "Wrapper for Pure JS, which is implementation of an image drawing and encoding api, based on HTML Canvas",
  "main": "index.js",
  "scripts": {
    "test": "npm run jshint && npm run jscs && npm run mocha",
    "mocha": "node_modules/.bin/mocha ./spec",
    "jscs": "node_modules/.bin/jscs .",
    "jshint": "node_modules/.bin/jshint --exclude ./node_modules . --verbose",
    "jsdoc": "node_modules/.bin/jsdoc2md index.js > docs/_api-Image.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/megahertz/node-purified-image.git"
  },
  "files": [
    "index.js",
    "README.md"
  ],
  "keywords": [
    "node",
    "image",
    "pureimage",
    "promise",
    "canvas",
    "jpg",
    "png",
    "draw",
    "font"
  ],
  "author": "Alexey Prokhorov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/megahertz/node-purified-image/issues"
  },
  "homepage": "https://github.com/megahertz/node-purified-image#readme",
  "dependencies": {
    "pureimage": "^0.0.13"
  },
  "engines": {
    "node": ">=6.0"
  },
  "devDependencies": {
    "chai": "*",
    "jscs": "*",
    "jsdoc-to-markdown": "^1.3.6",
    "jshint": "*",
    "jshint-reporter-jscs": "*",
    "mocha": "*"
  }
}
